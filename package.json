{
  "name": "design-system-demo-v2",
  "version": "1.0.4",
  "description": "design system demo",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./types/index.d.ts",
  "files": [
    "dist/",
    "tailwind.config.js",
    "types/"
  ],
  "scripts": {
    "start": "start-storybook -p 9009",
    "build:mainjs": "node ./scripts/create-main-js.js",
    "build": "yarn clean && yarn build:mainjs && yarn build:js && yarn build:declarations",
    "build:js": "cross-env BABEL_ENV=production babel --config-file ./babel.config.build.json src/components --out-dir dist --extensions \".ts,.tsx,.js\" --no-copy-ignored --copy-files",
    "build:declarations": "tsc --p tsconfig.json && yarn move:declarations && rimraf temp",
    "move:declarations": "node ./scripts/move-declarations.js",
    "clean": "rimraf dist && rimraf types && rimraf temp",
    "test": "jest",
    "release": "release-it"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "rimraf": "^3.0.2",
    "@storybook/addon-controls": "^6.2.1",
    "@storybook/addon-docs": "^6.2.1",
    "@storybook/addon-knobs": "^6.2.1",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.2.1",
    "@tailwindcss/postcss7-compat": "^2.0.4",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.1",
    "autoprefixer": "^9",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "postcss": "^7",
    "postcss-loader": "^5.2.0",
    "react": "^17.0.2",
    "react-docgen-typescript": "^1.21.0",
    "react-dom": "^17.0.2",
    "release-it": "^14.5.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "react": ">16.0.0",
    "react-dom": ">16.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "build/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  }
}
